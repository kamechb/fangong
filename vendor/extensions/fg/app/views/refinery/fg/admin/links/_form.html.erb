<%= form_for [refinery, :fg_admin, @link] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @link,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url, :class => 'larger widest'  -%>

  </div>

  <div class='field'>
    <%= f.label :cooperation -%>
    <%= f.radio_button :cooperation, 1, :checked => @link.cooperation  -%>合作企业
    <%= f.radio_button :cooperation, 0, :checked => !@link.cooperation  -%>非合作企业

  </div>
  
  <div class='field'>
    <%= f.label :logo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :logo_id,
               :image => @link.logo,
               :toggle_image_display => false %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.links.admin.links.link'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @link.name) %>
<% end -%>
