<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(link) -%>">
  <span class='title'>
    <%= link.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.fg_link_path(link),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_fg_admin_link_path(link),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.fg_admin_link_path(link),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => link.name),
        :method => :delete %>
  </span>
</li>