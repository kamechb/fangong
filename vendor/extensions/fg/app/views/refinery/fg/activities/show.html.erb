<div class="container">
  <div class="row">
    <div class="span3">
      <%= render_cell :sidebar, :all %>
    </div>    
    <div class="span9">

      <div class="well clearfix">
        <div class="activity">
          <h2><%= @activity.title %><small><%= show_time(@activity.created_at) %></small></h2>
          <div class="imageContainer" >
            <%= image_fu @activity.main_image, nil, {:width => 500} %>
          </div>
          <p><%= @activity.desc %></p>
          <div>
            <%= raw @activity.content %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
