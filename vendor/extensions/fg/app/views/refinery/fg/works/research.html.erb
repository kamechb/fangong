<div class="container">
  <div class="BoardLayout" id="wrapper">
    <div id="ColumnContainer" style="height: 885px;">
      <div style="display: none;" class="feed">
      </div>
      <% @works.each do |work| %>
      <div data-height="400" data-width="500" data-id="<%= work.id %>" class="pin">
        <div class="PinHolder">
          <%= link_to(image_fu(work.main_image, "205x"), refinery.fg_work_path(work), :class => "PinImage ImgLink")%>
        </div>
        <p class="description"><%= work.name %></p>
      </div>      
      <% end %>
    </div><!-- #ColumnContainer -->

      <!-- Infinite scroll loading indicator -->
    <div id="LoadingPins">
      <span></span>
    </div>
    
  </div><!-- #wrapper -->
</div>

