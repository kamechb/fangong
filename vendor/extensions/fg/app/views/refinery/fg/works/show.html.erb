<div class="container">
  <div class="row">
    <div class="span3">
      <%= render_cell :sidebar, :all %>
    </div>    
    <div class="span9">

      <div class="well clearfix">
        <div class="work">
          <h2><%= @work.name %><small><%= show_time(@work.created_at) %></small></h2>
          <div class="imageContainer" >
            <%= image_fu @work.main_image, "380x380" %>
          </div>
          <p><%= @work.desc %></p>
          <div>
            <%= raw @work.content %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
