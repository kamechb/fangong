<div class="container">
  <div class="row">
    <div class="span3">
      <%= render_cell :sidebar, :all %>
    </div>    

    <ul class="nav nav-pills pull-right">
    <% @work_categories.each do |c| %>
      <li><%= link_to c.name, refinery.fg_works_path(:category => c.name) %></li>
    <% end %>
    </ul>

    <div class="span9">
      <div class="well clearfix">
          <div id="wptg_Carousel2" class="carousel wtsCarousel slide">
          <!-- Carousel items -->
            <div class="carousel-inner">
            <% @category_works.each do |work| %>
              <div class="item <%= actived(work.id, @work.id) %>">
                <div class="contentSlide">
                  <div class="work">
                    <h2><%= work.name %><small><%= show_time(work.created_at) %></small></h2>
                    <div class="imageContainer" >
                      <% if work.main_image.image_width < 660 %>
                        <%= image_fu work.main_image, nil %>
                      <% else %>
                        <%= image_fu work.main_image, "660x" %>
                      <% end %>
                    </div>
                    <p><%= work.desc %></p>
                  </div>        
                </div>
              </div>
            <% end %>
            </div>
            <a class="carousel-control left" href="#wptg_Carousel2" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#wptg_Carousel2" data-slide="next">&rsaquo;</a>
          </div><!-- carousel -->
      </div><!-- well -->
    </div><!-- span9 -->
  </div><!-- row -->
</div><!-- container -->

<% content_for :javascripts do %>
  <%= javascript_include_tag 'carousel' %>
  <script>
  jQuery(function () {
    jQuery('.wtsCarousel').carousel({
      interval: false
    });
  })
  </script>

<% end %>
