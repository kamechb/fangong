<div class="container">
  <div class="row">
    <div class="span3">
      <%= render_cell :sidebar, :all %>
    </div>    
    <div class="span9">

      <div class="well clearfix">
        <div class="work">
          <h2><%= @work.name %><small><%= show_time(@work.created_at) %></small></h2>
          <div class="imageContainer" >
            <%= image_fu @work.main_image, nil, {:width => 500} %>
          </div>
          <p><%= @work.desc %></p>
          <div>
            <%= raw @work.content %>
          </div>
        </div>
        <div class="relativeInfo">
          <h3>其他作品</h3>
          <ul>
            <% @works.each do |work| %>
              <li>
                <a class="imageContainer pull-left" href="<%= refinery.fg_work_path(work) %>">
                  <%= image_fu work.main_image, "50x50!"%>
                </a>              
              </li>
            <% end %>
          </ul>    
        </div>
      </div>
    </div>
  </div>
</div>
