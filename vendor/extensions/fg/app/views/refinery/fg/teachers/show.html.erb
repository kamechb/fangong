<div class="container">
  <div class="row">
    <div id="minor" class="span3">
    <%= render_cell :sidebar, :all %> 
    </div>
    <div id="main" class="span9">
      <div class="well clearfix">
        <div class="teacher">
          <a class="imageContainer pull-left" href="<%= refinery.fg_teacher_path(@teacher) %>">
            <%= image_fu @teacher.avatar, nil %>
          </a>
          <h2><%= link_to @teacher.name, refinery.fg_teacher_path(@teacher) %><small><%=raw @teacher.title %></small></h2>
          <p><%= @teacher.desc %></p>
          <p>作品：<%= @teacher.works %></p>
          <div>
            <%= raw @teacher.content %>
          </div>
        </div>
        <div class="teachers">
          <h2><%= t('.other') %></h2>
          <ul id="teachers">
            <% @teachers.each do |teacher| %>
              <li>
                <a class="imageContainer pull-left" href="<%= refinery.fg_teacher_path(raw @teacher) %>">
                  <%= image_fu teacher.avatar, nil %>
                </a>
              </li>
            <% end %>
          </ul>    
        </div>
     </div>  <!--well-->  
    </div>
  </div>
</div>


<%= render '/refinery/content_page' %>
