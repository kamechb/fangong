<div class="container">
  <div class="row">
    <div class="span3">
      <%= render_cell :sidebar, :all %>
    </div>    
    <div class="span9">

      <div class="row">
        <ul class="nav nav-pills pull-right">
        <% @report_categories.each do |c| %>
          <li><%= link_to c.name, refinery.fg_reports_path(:category => c.name) %></li>
        <% end %>
        </ul>
      </div>

      <div class="well clearfix">
        <div class="report">
          <h2><%= @report.title %><small><%= show_time(@report.created_at) %></small></h2>
          <pre><%= @report.desc %></pre>
          <div>
            <%= raw @report.content %>
          </div>
        </div>
        <div class="relativeInfo">
          <h3>最新资讯</h3>
          <ul>
          <% @reports.each do |report| %>
            <li>
              <%= link_to report.title, refinery.fg_report_path(report) %>
            </li>
          <% end %>
          </ul>    
        </div>
      </div>
    </div>
  </div>
</div>
