<div class="container">
  <div class="row">
    <div class="span3">
      <%= render_cell :sidebar, :all %>
    </div>    
    <div class="span9">

      <div class="well clearfix">
        <div class="report">
          <h2><%= @report.title %><small><%= @report.created_at %></small></h2>
          <p><%= @report.desc %></p>
          <div>
            <%= raw @report.content %>
          </div>
        </div>
        <div class="relativeInfo">
          <h2>最新资讯</h2>
          <ul>
            <% @reports.each do |report| %>
              <li>
                <%= link_to report.title, refinery.fg_report_path(report) %>
              </li>
            <% end %>
          </ul>    
        </div>
      </div>
    </div>
  </div>
</div>
