<div class="container">
  <div class="row">
    <div id="minor" class="span3">
    <%= render_cell :sidebar, :all %> 
    </div>
    <div id="main" class="span9">
      <div class="well">
        <div class="page-header"><h1>学员反馈</h1></div>
        <div class="student clearfix">
          <h2><%= @student.name %>:《<%= @student.profession.name %>》</h2>
          <div>
            <%= @student.feedback %>
          </div>
          <br />
          <div>
            <%= raw @student.job %>
          </div>
        </div>
        <div class="relativeInfo students">
          <h2><%= t('.other') %></h2>
          <ul>
            <% @other_students.each do |student| %>
              <li>
                <%= link_to student.name, refinery.fg_student_path(student) %>
              </li>
            <% end %>
          </ul>    
        </div>
      </div>
    </div>
  </div>
</div>
