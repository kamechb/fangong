<% content_for :body_content_title do %>
  <%= @profession.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @profession.name %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @profession.content %>
    </p>
  </section>
  <section>
    <h1>Open At</h1>
    <p>
      <%=raw @profession.open_at %>
    </p>
  </section>
  <section>
    <h1>Recommend</h1>
    <p>
      <%=raw @profession.recommend %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="professions">
      <% @professions.each do |profession| %>
        <li>
          <%= link_to profession.name, refinery.fg_profession_path(profession) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
