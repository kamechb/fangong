<% content_for :body_content_title do %>
  <%= @link.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @link.name %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @link.url %>
    </p>
  </section>
  <section>
    <h1>Logo</h1>
    <p>
      <%= image_fu @link.logo, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="links">
      <% @links.each do |link| %>
        <li>
          <%= link_to link.name, refinery.fg_link_path(link) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
