<% content_for :body_content_title do %>
  <%= @job.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @job.name %>
    </p>
  </section>
  <section>
    <h1>Company Name</h1>
    <p>
      <%=raw @job.company_name %>
    </p>
  </section>
  <section>
    <h1>Desc</h1>
    <p>
      <%=raw @job.desc %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @job.content %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="jobs">
      <% @jobs.each do |job| %>
        <li>
          <%= link_to job.name, refinery.fg_job_path(job) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
