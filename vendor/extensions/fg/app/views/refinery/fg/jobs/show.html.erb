<div class="container">
  <div class="row">
    <div id="minor" class="span3">
    <%= render_cell :sidebar, :all %> 
    </div>
    <div id="main" class="span9">
      <div class="well clearfix">
        <div class="job">
          <h2><%= @job.company_name %>:<%= @job.name %><small><%=@job.created_at %></small></h2>
          <p><%= @job.desc %></p>
          <div><%= raw @job.content %></div>
        </div>
        <div class="relativeInfo">
          <h3>最新招聘</h3>
          <ul>
            <% @jobs.each do |job| %>
              <li>
                <%= link_to "#{job.company_name}:#{job.name}", refinery.fg_job_path(job) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

