<div class="container">
  <div class="row">
    <div id="minor" class="span3">
    <%= render_cell :sidebar, :all %> 
    </div>
    <div id="main" class="span9">
      <ul id="jobs">
        <% @jobs.each do |job| %>
          <li class="well clearfix">
            <div class="job">
                <h2><%= job.company_name %>:<%= job.name %><small><%=job.created_at %></small></h2>
                <p><%= job.desc %></p>
                <%= link_to "查看详细>>", refinery.fg_job_path(job), :class => "linkTo" %>
              </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
