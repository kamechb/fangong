<div class="box sidebar">
  <h3 class="box-header"><%= link_to "学员报名信息", refinery.signup_fg_students_path, :class => "box-title" %></h3>
  <div class="box-content">
    <ul class="students">
    <% @signup_students.each do |student| %>
      <li>
        <h4><%= student.name %> <small><%= student.address %></small></h4>
        <p>所学课程：<%= link_to student.profession.name, refinery.fg_profession_path(student.profession)%></p>
      </li>
    <% end %>
    </ul>
    <div class="viewAll">
       <a href="<%= refinery.signup_fg_students_path %>">查看全部</a>
    </div>
  </div>
</div>  <!--well-->    
