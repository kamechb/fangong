          <ul class="row thumbnails works">
          <% @research_works.each do |work| %>
            <li>
              <%= link_to image_fu(work.main_image, '142x152#c'), refinery.fg_work_path(work) %>
              <p><%= work.desc %></p>
            </li>
          <% end %>
          </ul>
          <div class="viewAll">
             <a href="<%= refinery.research_fg_works_path %>">查看全部</a>
          </div>
        </div>
      </div>  <!--well-->    
