  <div class="box sidebar">
    <h3 class="box-header"><span class="box-title">学员活动</span></h3>
    <div class="box-content">
      <ul class="row thumbnails activities">
      <% @activities.each do |activity| %>
        <li>
          <%= link_to(image_fu(activity.main_image, "214x229!"), "#")%>
